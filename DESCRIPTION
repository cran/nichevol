Package: nichevol
Type: Package
Title: Tools for Ecological Niche Evolution Assessment Considering
        Uncertainty
Version: 0.1.20
Authors@R: c(
    person("Marlon E.", "Cobos", email = "manubio13@gmail.com", role = c("aut","cre")),
    person("Hannah L.", "Owens", email = "hannah.owens@gmail.com", role = "aut"),
